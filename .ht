<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Monthly Expenses Tracker</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    * {
      box-sizing: border-box;
      font-family: 'Inter', sans-serif;
    }
    body {
      background: #f0f4f8;
      margin: 0;
      padding: 20px;
      color: #333;
    }
    .container {
      max-width: 900px;
      margin: auto;
      background: white;
      padding: 20px;
      border-radius: 16px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
    h2 {
      text-align: center;
      font-size: 1.5rem;
      margin-bottom: 20px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 10px;
      text-align: center;
    }
    th {
      background: #f1f5f9;
    }
    input[type="date"],
    input[type="text"],
    input[type="number"],
    input[type="month"] {
      width: 100%;
      padding: 6px 8px;
      border-radius: 8px;
      border: 1px solid #ccc;
      background: #f9f9f9;
    }
    input:disabled {
      background: #eee;
    }
    .totals {
      background: #e2e8f0;
      font-weight: bold;
    }
    .per-head {
      font-weight: 600;
      font-size: 1.1rem;
      background: #e6fffa;
      padding: 15px;
      border-radius: 10px;
    }
    button {
      padding: 10px 16px;
      margin: 5px 5px 10px 0;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      font-weight: 600;
      font-size: 0.95rem;
    }
    .unlock-btn {
      background-color: #38bdf8;
      color: white;
    }
    .action-btn {
      background-color: #4ade80;
      color: white;
    }
    .export-btn {
      background-color: #facc15;
      color: #333;
    }
    .person-col {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>
      Month: <input type="month" id="monthSelector" />
    </h2>

    <table id="expenseTable">
      <thead>
        <tr>
          <th>Date</th>
          <th>Particulars</th>
          <th>
            <div class="person-col">
              BHUSHAN
              <button class="unlock-btn" onclick="unlock('A')">ðŸ”“ Unlock</button>
            </div>
          </th>
          <th>
            <div class="person-col">
              DHEERAJ
              <button class="unlock-btn" onclick="unlock('B')">ðŸ”“ Unlock</button>
            </div>
          </th>
          <th>
            <div class="person-col">
              SAURABH
              <button class="unlock-btn" onclick="unlock('C')">ðŸ”“ Unlock</button>
            </div>
          </th>
        </tr>
      </thead>
      <tbody id="expenseBody">
        <tr>
          <td><input type="date"></td>
          <td><input type="text" placeholder="Item name"></td>
          <td><input type="number" class="pa" min="0" value="0" disabled></td>
          <td><input type="number" class="pb" min="0" value="0" disabled></td>
          <td><input type="number" class="pc" min="0" value="0" disabled></td>
        </tr>
      </tbody>
      <tfoot>
        <tr class="totals">
          <td colspan="2">Total</td>
          <td id="totalA">0</td>
          <td id="totalB">0</td>
          <td id="totalC">0</td>
        </tr>
      </tfoot>
    </table>

    <button id="addRowBtn" class="action-btn">âž• Add New</button>
    <button id="updateBtn" class="action-btn">Update</button>
    <button id="exportBtn" class="export-btn">Export to Fixed HTML</button>

    <div id="perHeadSummary" class="per-head">Per Head Summary:</div>
  </div>

  <script>
    const tableBody = document.getElementById("expenseBody");
    const totalA = document.getElementById("totalA");
    const totalB = document.getElementById("totalB");
    const totalC = document.getElementById("totalC");
    const perHeadSummary = document.getElementById("perHeadSummary");

    function calculateTotals() {
      let a = 0, b = 0, c = 0;
      document.querySelectorAll(".pa").forEach(input => a += parseFloat(input.value || 0));
      document.querySelectorAll(".pb").forEach(input => b += parseFloat(input.value || 0));
      document.querySelectorAll(".pc").forEach(input => c += parseFloat(input.value || 0));
      totalA.textContent = a.toFixed(2);
      totalB.textContent = b.toFixed(2);
      totalC.textContent = c.toFixed(2);

      const total = a + b + c;
      const perHead = total / 3;
      let msg = `Per Head: â‚¹${perHead.toFixed(2)}<br>`;
      msg += `Person A: ${(a - perHead).toFixed(2)} ${a > perHead ? 'ðŸŸ¢' : 'ðŸ”´'}<br>`;
      msg += `Person B: ${(b - perHead).toFixed(2)} ${b > perHead ? 'ðŸŸ¢' : 'ðŸ”´'}<br>`;
      msg += `Person C: ${(c - perHead).toFixed(2)} ${c > perHead ? 'ðŸŸ¢' : 'ðŸ”´'}`;
      perHeadSummary.innerHTML = msg;
    }

    document.getElementById("updateBtn").onclick = () => {
      calculateTotals();
    };

    document.getElementById("addRowBtn").onclick = () => {
      const row = document.createElement("tr");
      row.innerHTML = `
        <td><input type="date"></td>
        <td><input type="text" placeholder="Item name"></td>
        <td><input type="number" class="pa" min="0" value="0" disabled></td>
        <td><input type="number" class="pb" min="0" value="0" disabled></td>
        <td><input type="number" class="pc" min="0" value="0" disabled></td>
      `;
      tableBody.appendChild(row);
    };

    function unlock(person) {
      const pass = prompt("Enter passcode for Person " + person);
      const classMap = { "A": "pa", "B": "pb", "C": "pc" };
      const correct = { "A": "123A", "B": "123B", "C": "123C" };
      if (pass === correct[person]) {
        document.querySelectorAll("." + classMap[person]).forEach(inp => inp.disabled = false);
        alert("Unlocked for Person " + person);
      } else {
        alert("Incorrect Passcode!");
      }
    }

    document.getElementById("exportBtn").onclick = () => {
      const clone = document.documentElement.cloneNode(true);
      clone.querySelectorAll("script").forEach(s => s.remove());
      clone.querySelectorAll("input[disabled]").forEach(i => i.removeAttribute("disabled"));
      clone.querySelectorAll("input").forEach(i => {
        i.setAttribute("readonly", true);
        i.style.border = "none";
        i.style.background = "white";
        i.style.pointerEvents = "none";
      });
      const html = "<!DOCTYPE html>\n" + clone.outerHTML;
      const blob = new Blob([html], { type: 'text/html' });
      const file = new File([blob], "frozen_expense.html", { type: 'text/html' });

      if (navigator.canShare && navigator.canShare({ files: [file] })) {
        navigator.share({
          title: 'Frozen Monthly Expense',
          text: 'Fixed non-editable export',
          files: [file]
        }).catch(e => alert("Share failed: " + e));
      } else {
        alert("Sharing not supported on this browser");
      }
    };
  </script>
</body>
</html>
